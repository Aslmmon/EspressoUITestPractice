<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/cutive</item>
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="AppShapeAppearance.MediumComponent">
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="AppShapeAppearance.MediumComponent" parent="AppShapeAppearance.SmallComponent">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
